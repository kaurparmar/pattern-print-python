n=13
print(" "*(n),"*")
for i in range(1,n+1,2):
    for j in range(n-i+1,1,-1):
        print(" ",end="")
    print("*",end=" ")
    for k in range(1,i+1):
        print(" ",end=" ")
    if i!=1 or i!=n:
        print("*")
    else:
        print()

for i in range(1,n,2):
    for j in range(1,i+2):
        print(" ",end="")
    print("*",end=" ")
    for k in range(1,n-i):
        print(" ",end=" ")
    if i!=1 or i!=n-1:
        print("*")
    else:
        print()
print(" "*(n),"*")
