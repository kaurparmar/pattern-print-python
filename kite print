n=9

spaces=n

for i in range(1,n+1,2):
    for j in range(spaces-i):
        print(" ",end="")
    for k in range(0,i):
        print("*",end=" ")
    print()


    
# print(" ",end="")
for i in range(1,n+1):
    for j in range(0,i):
        print(" ",end="")
    for k in range(n-i,0,-1):
        print("*",end=' ')
    print()
